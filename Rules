#!/usr/bin/env ruby


### ASSETS

passthrough '/images/**/*'
passthrough '/javascript/**/*'
passthrough '/fonts/**/*'

compile '/stylesheets/*.sass' do
  filter :sass
  write item.identifier.without_ext + '.' + Digest::SHA1.hexdigest(item.raw_content) + '.css'
end

compile '/images/**/*' do
  write item.identifier
end


### VIEWS

compile '/index.erb' do
  filter :erb
  filter :krimdown
  layout '/default.erb'
  write item.identifier.without_exts + '.html'
end

compile /^\/.+\.md$/ do
  filter :krimdown
  layout '/article.erb'
  layout '/default.erb'
  write item.identifier.without_ext + '/index.html'
end


###

compile '/**/*' do
end

layout '/*.erb', :erb
